package com.compose.fcm.presentation.auth

import com.compose.fcm.domain.auth.AuthResponse

sealed interface LoginAction {
    data class OnEmailSignUp(val response: AuthResponse): LoginAction
    data class OnEmailSignIn(val response: AuthResponse): LoginAction
    data class OnGoogleSignIn(val response: AuthResponse): LoginAction

    data class OnEmailChange(val email: String): LoginAction
    data class OnPasswordChange(val password: String): LoginAction
    data object OnPasswordVisibilityChange: LoginAction

    data class OnSubmit(val email: String, val password: String): LoginAction
}
